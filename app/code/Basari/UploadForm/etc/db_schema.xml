<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product_upload_file">
        <column xsi:type="int" name="id" padding="10" unsigned="false" identity="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="mediumtext" name="title" nullable="false" comment="Title"/>
        <column xsi:type="varchar" name="image" nullable="false" length="255" comment="Image"/>
        <column xsi:type="mediumtext" name="customer_name" nullable="false" comment="Customer Name"/>
        <column xsi:type="mediumtext" name="customer_email" nullable="false" comment="Customer Email"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
