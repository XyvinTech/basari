									<?= /* @noEscape */ $block->getChildBlock('renderer')->render($filter) ?>
								</div>
							</div>
						</div>
					</div>
					<?php
                        if ($block->getRequest()->getParam($filter->getRequestVar())) {
                            $activeArray[] = $activeKey;
                        }
                        $activeKey++;
                    ?>
						<?php endif; ?>
						
				<?php endforeach; ?>
				<?php if ($wrapOptions) : ?>
					</dl>
				<?php endif; ?>
