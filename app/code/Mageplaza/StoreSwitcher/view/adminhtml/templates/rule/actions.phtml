<div id="mpstoreswitcher-actions">
    <?= /** @noEscape **/ $block->getForm()->getHtml() ?>
</div>

<script>
    require(['jquery'], function ($) {
        var fieldStoreRedirect = $('.field-store_redirected'),
            fieldCurrency      = $('.field-currency'),
            fieldChangeType    = $('.field-change_type'),
            fieldRedirectURL   = $('.field-redirect_url'),
            fieldStoreIds      = $('.field-store_ids'),
            fieldFirstRedirect = $('.field-first_redirect'),
            actionType         = $('#rule_redirect_type');

        actionType.on('change', function () {
            if ($(this).val() === 'redirect_store_currency') {
                fieldStoreRedirect.show();
                fieldCurrency.show();
                fieldChangeType.show();
                fieldFirstRedirect.show();
                fieldRedirectURL.hide();
                fieldStoreIds.hide();
            } else {
                fieldStoreRedirect.hide();
                fieldCurrency.hide();
                fieldChangeType.hide();
                fieldFirstRedirect.hide();
                fieldRedirectURL.show();
                fieldStoreIds.show();
            }
        });
        actionType.trigger('change');
    });
</script>
