<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
        <referenceContainer name="head.additional">
            <block class="Scommerce\GoogleTagManagerPro\Block\Gtm"
                   name="google_tag_manager_pro_js" template="Scommerce_GoogleTagManagerPro::gtm.phtml" after="scommerce_tracking_data">
                <arguments>
                    <argument name="view_model" xsi:type="object">Scommerce\GoogleTagManagerPro\ViewModel\Gtm</argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Template"
                       name="scom_gtm_ga4"
                       template="Scommerce_GoogleTagManagerPro::ga4.phtml" />
            </block>
            <block class="Magento\Framework\View\Element\Template" name="google_tag_manager_pro_cookies" template="Scommerce_GoogleTagManagerPro::cookiescript.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Scommerce\GoogleTagManagerPro\Block\CookieScript</argument>
                </arguments>
            </block>
        </referenceContainer>
		<referenceContainer name="after.body.start">
            <block class="Scommerce\GoogleTagManagerPro\Block\Gtm" name="google_tag_manager_pro_ns" as="google_tag_manager_pro_ns"
                   template="Scommerce_GoogleTagManagerPro::gtmns.phtml" before="-"/>
        </referenceContainer>
    </body>
</page>
