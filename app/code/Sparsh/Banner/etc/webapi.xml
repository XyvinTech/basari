<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Customer Account -->
    <route url="/V1/banner" method="GET">
		<service class="Sparsh\Banner\Api\BannerImage" method="getBybanner"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
<route url="/V1/banner/:bannerId" method="GET">
		<service class="Sparsh\Banner\Api\BannerRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
